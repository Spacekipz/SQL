/* Create table about the people and what they do here */
CREATE TABLE famous_people (id INTEGER         PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    email TEXT,
    birthdate TEXT,
    friend_id INTEGER,
    location_id INTEGER);
    
INSERT INTO famous_people (fullname, email, birthdate, friend_id, location_id)
